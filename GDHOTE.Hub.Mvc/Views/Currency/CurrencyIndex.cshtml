@model List<GDHOTE.Hub.CoreObject.ViewModels.CurrencyViewModel>
@{
    ViewBag.Title = "CurrencyIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Currencies</h2>

<p>
    @Html.ActionLink("New Currency", "New", "Currency", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="currencies" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var currency in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(currency.CurrencyCode, "Edit", "Currency", new { id = currency.Id }, null)</td>
                            <td>@currency.Name</td>
                            <td>@currency.Status</td>
                            <td>@currency.DateCreated.ToString("dd-MMM-yyyy")</td>
                            <td><button data-currency-id="@currency.Id" class="btn btn-link js-delete">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}
@section scripts
{
    <script>
            $(document).ready(function () {
                $("#currencies").DataTable();

                $("#currencies").on("click", ".js-delete", function () {
                    var button = $(this);

                    var id = button.attr("data-currency-id");

                    var form = $('#responsive');
                    var token = $('input[name="__RequestVerificationToken"]', form).val();

                    //Submit request
                    var request = { __RequestVerificationToken: token };

                    bootbox.confirm("Are you sure you want to proceed?", function (result) {
                        if (result) {
                            $.ajax({
                                url: '@Url.Action("DeleteCurrency", "Currency")/' + id,
                                method: "POST",
                                data: request,
                                success: function (data) {
                                    if (data !== null) {
                                        if (data.ErrorCode === "00") {
                                           swal({
                                                title: "Success",
                                                text: "success",
                                                type: "success"
                                            });

                                            window.location.reload(true);
                                        }
                                        else {
                                            alert(data.ErrorMessage);
                                        }
                                    };

                                }
                            });
                        }
                    });

                });
            });
    </script>
}
