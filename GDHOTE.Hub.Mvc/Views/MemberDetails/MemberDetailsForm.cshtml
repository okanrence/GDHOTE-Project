@model GDHOTE.Hub.CoreObject.ViewModels.MemberDetailsFormModel
@{
    ViewBag.Title = "MemberDetailsForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.MobileNumber == null ? "New Details" : "Edit Details";
    }

}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "MemberDetails"))
{
    @Html.ValidationSummary(true, "Please fix the below errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.MobileNumber)
        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MobileNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AlternateNumber)
        @Html.TextBoxFor(m => m.AlternateNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AlternateNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmailAddress)
        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmailAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.YearGroupId)
        @Html.DropDownListFor(m => m.YearGroupId, new SelectList(Model.YearGroups, "Id", "Name"), "Select Year Group", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.YearGroupId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CountryOfOriginId)
        @Html.DropDownListFor(m => m.CountryOfOriginId, new SelectList(Model.Countries, "Id", "Name"), "Select Country", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CountryOfOriginId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StateOfOriginId)
        @Html.DropDownListFor(m => m.StateOfOriginId, new SelectList(Model.States, "Id", "Name"), "Select State", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StateOfOriginId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResidenceAddress)
        @Html.TextAreaFor(m => m.ResidenceAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ResidenceAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResidenceCountryId)
        @Html.DropDownListFor(m => m.ResidenceCountryId, new SelectList(Model.Countries, "Id", "Name"), "Select Country", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ResidenceCountryId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResidenceStateId)
        @Html.DropDownListFor(m => m.ResidenceStateId, new SelectList(Model.States, "Id", "Name"), "Select State", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ResidenceStateId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateWedded)
        @Html.TextBoxFor(m => m.DateWedded, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateWedded)
    </div>
    @*<div>@Html.HiddenFor(m => m.MemberDetails.MemberDetailsId)</div>
    <div>@Html.HiddenFor(m => m.MemberDetails.MemberKey)</div>*@
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <div>@Html.AntiForgeryToken()</div>
}

@section scripts
{
    <script>

        $(function () {
            $('#DateWedded').datepicker({
                format: 'dd-M-yyyy',
                autoclose: 1,
                todayHighlight: 1
            });
        });


    </script>
}

