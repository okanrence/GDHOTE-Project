@model List<GDHOTE.Hub.CoreObject.ViewModels.MemberDetailsViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact Details</h2>
 
@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="members" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Member Code</th>
                    <th>Mobile No</th>
                    <th>Email</th>
                    <th>State Of Origin</th>
                    <th>Country Of Origin</th>
                    <th>Residence Country</th>
                    <th>Year Group</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(!string.IsNullOrEmpty(member.MobileNumber) ? member.MobileNumber : "NA", "Edit", "MemberDetails", new { id = member.Id }, null)</td>
                        <td>@member.MobileNumber</td>
                        <td>@member.EmailAddress</td>
                        <td>@member.StateOfOriginId</td>
                        <td>@member.CountryOfOriginId</td>
                        <td>@member.ResidenceCountryId</td>
                        <td>@member.YearGroupId</td>
                        <td>@member.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-member-id="@member.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#members").DataTable();

            $("#members").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "../api/v1/memberdetails/delete-member-details?id=" + button.attr("data-member-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}

