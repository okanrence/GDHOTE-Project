@model List<GDHOTE.Hub.CoreObject.ViewModels.AccrualTypeViewModel>

@{
    ViewBag.Title = "Accrual Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accrual Types</h2>
<p>
    @Html.ActionLink("New Accrual Type", "New", "AccrualType", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="activitytypes" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actType in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(actType.Name, "Edit", "AccrualType", new { id = actType.Id }, null)</td>
                            <td>@actType.Status</td>
                            <td>@actType.DateCreated.ToString("dd-MMM-yyyy")</td>
                            <td><button data-AccrualType-id="@actType.Id" class="btn btn-link js-delete">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#activitytypes").DataTable();

            $("#activitytypes").on("click", ".js-delete", function () {
                var button = $(this);
                var id = button.attr("data-AccrualType-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteAccrualType", "AccrualType")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}
