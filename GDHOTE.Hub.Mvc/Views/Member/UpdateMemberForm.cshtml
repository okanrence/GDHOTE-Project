@model GDHOTE.Hub.CoreObject.ViewModels.UpdateMemberFormViewModel

@{
    ViewBag.Title = "MemberForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Member</h2>
@using (Html.BeginForm("Update", "Member"))
{
    @Html.ValidationSummary(true, "Please fix the below errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Surname)
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OtherNames)
        @Html.TextBoxFor(m => m.OtherNames, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.OtherNames)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.DropDownListFor(m => m.Gender, new SelectList(Model.Genders, "Code", "Description"), "Select Sex", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gender)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaritalStatus)
        @Html.DropDownListFor(m => m.MaritalStatus, new SelectList(Model.MaritalStatuses, "Code", "Description"), "Select Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaritalStatus)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.InitiationStatus) Initiation?
        </label>
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.MagusStatus) Is Magus?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MagusDate)
        @Html.TextBoxFor(m => m.MagusDate, "{0:d MMM yyyy}", new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.MagusDate)
    </div>
    <div>@Html.HiddenFor(m => m.MemberKey)</div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <div>@Html.AntiForgeryToken()</div>
}

@section scripts
{
    <script>

        $('#MagusFlag').change(function () {
            $("#MagusDate").attr("disabled", !this.checked);
        });

        $(function () {
            $('#DateOfBirth').datepicker({
                format: 'dd M yyyy',
                autoclose: 1,
                todayHighlight: 1
            });
        });


        $(function () {
            $('#MagusDate').datepicker({
                format: 'dd M yyyy',
                autoclose: 1,
                todayHighlight: 1
            });
        });
    </script>
}