@model List<GDHOTE.Hub.CoreObject.ViewModels.MemberViewModel>

@{
    ViewBag.Title = "ApproveMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Approve Member</h2>

@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="members" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Surname</th>
                        <th>Other Name(s)</th>
                        <th>Gender</th>
                        <th>Martial Status</th>
                        <th>Status</th>
                        <th>Date Of Birth</th>
                        <th>Magus</th>
                        <th>Magus Date</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.Surname</td>
                            <td>@member.FirstName, @member.MiddleName </td>
                            <td>@member.Gender</td>
                            <td>@member.MaritalStatus</td>
                            <td>@member.MemberStatus</td>
                            <td>@(member.DateOfBirth?.Date.ToString("dd-MMM-yyyy") ?? "") </td>
                            <td>@member.MagusStatus</td>
                            <td>@(member.MagusDate?.Date.ToString("dd-MMM-yyyy") ?? "") </td>
                            <td>@member.DateCreated.ToString("dd-MMM-yyyy")</td>
                            <td><button data-member-id="@member.Id" class="btn btn-link js-action">Approve</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#members").DataTable();


            $("#members").on("click", ".js-action", function () {
                //debugger;
                var button = $(this);
                var memberKey = button.attr("data-member-id");

                var data = $('#members').DataTable().rows($(this).closest("tr")).data();

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                //var request = { __RequestVerificationToken: token, MemberKey: memberKey, Surname: data[0][0], Sex: data[0][2], ApprovedBy: memberKey };
                var request = { __RequestVerificationToken: token, MemberKey: memberKey, Action: 'A',  Sex: data[0][2]  };


                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("ApproveMember", "Member")',
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                        alert(data);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}
