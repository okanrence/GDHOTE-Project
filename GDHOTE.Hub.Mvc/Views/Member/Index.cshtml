@model List<GDHOTE.Hub.Core.Models.Member>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Members</h2>
<p>
    @Html.ActionLink("New Member", "New", "Member", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="members" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Member Code</th>
                    <th>Surname</th>
                    <th>Other Name(s)</th>
                    <th>Sex</th>
                    <th>Martial Status</th>
                    <th>Status</th>
                    <th>Date Of Birth</th>
                    <th>Magus</th>
                    <th>Magus Date</th>
                    <th>Record Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(!string.IsNullOrEmpty(member.MemberCode) ? member.MemberCode : "NA", "Edit", "Member", new { id = member.MemberKey }, null)</td>
                        <td>@member.Surname</td>
                        <td>@member.FirstName,  @member.MiddleName </td>
                        <td>@member.Sex</td>
                        <td>@member.MartialStatus</td>
                        <td>@member.StatusCode</td>
                        <td>@member.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                        <td>@member.MagusFlag</td>
                        <td>@(member.MagusDate?.Date.ToString("dd-MMM-yyyy") ?? "") </td>
                        <td>@member.RecordDate.ToString("dd-MMM-yyyy")</td>
                        <td>@Html.ActionLink("Contact Details", "Edit", "MemberDetails", new { id = member.MemberKey }, null)</td>
                        <td><button data-member-id="@member.MemberKey" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#members").DataTable();

            $("#members").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/hub/member/deletemember?id=" + button.attr("data-member-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}
