@model List<GDHOTE.Hub.CoreObject.ViewModels.MemberViewModel>

@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="members" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Member Code</th>
                    <th>Surname</th>
                    <th>Other Name(s)</th>
                    <th>Gender</th>
                    <th>Martial Status</th>
                    <th>Status</th>
                    <th>Date Of Birth</th>
                    <th>Magus</th>
                    <th>Magus Date</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1; }
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@i</td>@{ i++; }
                        <td>@member.MemberCode</td>
                        <td>@member.Surname</td>
                        <td>@member.FirstName, @member.MiddleName </td>
                        <td>@member.Gender</td>
                        <td>@member.MaritalStatus</td>
                        <td>@member.MemberStatus</td>
                        <td>@member.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                        <td>@member.MagusStatus</td>
                        <td>@(member.MagusDate?.Date.ToString("dd-MMM-yyyy") ?? "") </td>
                        <td>@member.DateCreated.ToString("dd-MMM-yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

