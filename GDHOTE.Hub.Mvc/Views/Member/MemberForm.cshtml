@model GDHOTE.Hub.Core.ViewModels.MemberFormViewModel

@{
    ViewBag.Title = "MemberForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.Member.MemberKey == 0 ? "New Member" : "Edit Member";
    }

}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "Member"))
{
    @Html.ValidationSummary(true, "Please fix the below errors.")
    @*<div class="form-group">
            @Html.LabelFor(m => m.Member.MemberCode)
            @Html.TextBoxFor(m => m.Member.MemberCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Member.MemberCode)
        </div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Member.FirstName)
        @Html.TextBoxFor(m => m.Member.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Member.MiddleName)
        @Html.TextBoxFor(m => m.Member.MiddleName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.MiddleName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Member.LastName)
        @Html.TextBoxFor(m => m.Member.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Member.DateOfBirth)
        @Html.TextBoxFor(m => m.Member.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Member.Sex)
        @Html.DropDownListFor(m => m.Member.Sex, new SelectList(Model.Sexs, "Code", "Description"), "Select Sex", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.Sex)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Member.MartialStatus)
        @Html.DropDownListFor(m => m.Member.MartialStatus, new SelectList(Model.MaritalStatus, "Code", "Description"), "Select Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Member.MartialStatus)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Member.MagusFlag) Is Magus?
        </label>
    </div>
    <div>@Html.HiddenFor(m => m.Member.MemberKey)</div>
    <div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

