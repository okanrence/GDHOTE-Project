@model GDHOTE.Hub.Core.ViewModels.RoleViewModel
    @{
        ViewBag.Title = "RoleForm";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    @{
        var pagename = "";
        if (Model != null)
        {
            pagename = Model == null ? "New Role" : "Edit Role";
        }

    }
    <h2>@pagename</h2>
    @using (Html.BeginForm("Save", "Role"))
    {
        <div>
            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                <div class="form-group">
                    @Html.LabelFor(r => r.Role.Name)
                    @Html.TextBoxFor(r => r.Role.Name, new { @class = "form-control gdhote-text-capitalize" })
                    @Html.ValidationMessageFor(r => r.Role.Name)
                </div>
                <div class="form-group">
                    <div>@Html.HiddenFor(r => r.Role.RoleId)</div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="form-group">
                    @Html.AntiForgeryToken()
                </div>
            </div>
        </div>

    }
