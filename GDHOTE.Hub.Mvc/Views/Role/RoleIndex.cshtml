@model List<GDHOTE.Hub.CoreObject.ViewModels.RoleViewModel>
@{
    ViewBag.Title = "RoleIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("New Role", "New", "Role", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">

        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="roles" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                    <tr>
                        <td>@Html.ActionLink(role.Name, "Edit", "Role", new { id = role.RoleKey }, null)</td>
                        <td>@role.RoleType</td>
                        <td>@role.Status</td>
                        <td>@role.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-role-id="@role.RoleKey" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#roles").DataTable();

            $("#roles").on("click", ".js-delete", function () {
                var button = $(this);
                var id = button.attr("data-role-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteRole", "Role")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}