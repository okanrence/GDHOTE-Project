@model List<GDHOTE.Hub.CoreObject.ViewModels.MemberViewModel>

@{
    ViewBag.Title = "Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activities</h2>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>
        <div>
            <table id="members" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Martial Status</th>
                        <th>Status</th>
                        <th>Date Of Birth</th>
                        <th>Magus</th>
                        <th>Magus Date</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1; }
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@i</td>  @{ i++; }
                            <td>@Html.ActionLink($"{ member.Surname}, {member.FirstName}", "MemberActivity", "Activity", new { id = member.MemberKey }, null)</td>
                            <td>@member.Gender</td>
                            <td>@member.MaritalStatus</td>
                            <td>@member.MemberStatus</td>
                            <td>@(member.DateOfBirth?.Date.ToString("dd-MMM-yyyy")) </td>
                            <td>@((member.MagusStatus) ? "Y" : "N")</td>
                            <td>@(member.MagusDate?.Date.ToString("dd-MMM-yyyy")) </td>
                            <td>@member.DateCreated.ToString("dd-MMM-yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#members").DataTable();

        });
    </script>
}

