@model List<GDHOTE.Hub.CoreObject.ViewModels.YearGroupViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Year Group</h2>
<p>
    @Html.ActionLink("New Year Group", "New", "YearGroup", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">

        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="yeargroups" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Code</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var yearGroup in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(yearGroup.Name, "Edit", "YearGroup", new {id = yearGroup.Id}, null)</td>
                        <td>@yearGroup.Status</td>
                        <td>@yearGroup.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-year-group-id="@yearGroup.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

    </div>

}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#yeargroups").DataTable();

            $("#yeargroups").on("click", ".js-delete", function () {
                var button = $(this);

                var id = button.attr("data-year-group-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteYearGroup", "YearGroup")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}

