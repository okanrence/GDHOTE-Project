@model List<GDHOTE.Hub.Core.Models.YearGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Year Group</h2>
<p>
    @Html.ActionLink("New Year Group", "New", "YearGroup", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="yeargroups" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var yearGroup in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(yearGroup.YearGroupCode, "Edit", "YearGroup", new { id = yearGroup.Id }, null)</td>
                        <td>@yearGroup.Description</td>
                        <td>@yearGroup.Status</td>
                    <td><button data-yeargroup-id="@yearGroup.Id" class="btn btn-link js-delete">Delete</button></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#yeargroups").DataTable();

            $("#yeargroups").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/v1/hub/yeargroup/delete-year-group?id=" + button.attr("data-yeargroup-id"),
                            method: "DELETE",
                            success: function () {
                                swal({
                                    title: "Success",
                                    text: "success",
                                    type: "success" 
                                });

                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}

