@model GDHOTE.Hub.CoreObject.ViewModels.YearGroupFormViewModel
@{
    ViewBag.Title = "YearGroupForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.Name == null ? "New Year Group" : "Edit Year Group";
    }

}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "YearGroup"))
{
    <div>
        <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
            <span class="text-danger">@ViewBag.ErrorBag</span>
            <div class="form-group">
                @Html.LabelFor(y => y.Name)
                @Html.TextBoxFor(y => y.Name, new {@class = "form-control gdhote-text-capitalize"})
                @Html.ValidationMessageFor(y => y.Name)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <div class="form-group">
                @Html.AntiForgeryToken()
            </div>
        </div>
    </div>

}