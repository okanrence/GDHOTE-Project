@model List<GDHOTE.Hub.CoreObject.Models.PaymentType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Payment Type</h2>
<p>
    @Html.ActionLink("New Payment Type", "New", "PaymentType", null, new { @class = "result-list-button" })
</p>


@if (Model == null)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="paymenttypes" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var paymentType in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(paymentType.Description, "Edit", "PaymentType", new { id = paymentType.PaymentTypeId }, null)</td>
                        <td>@paymentType.Status</td>
                        <td><button data-paymenttype-id="@paymentType.PaymentTypeId" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#paymenttypes").DataTable();

            $("#paymenttypes").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "../api/v1/hub/paymenttype/delete-payment-type?id=" + button.attr("data-paymenttype-id"),
                            method: "DELETE",
                            success: function () {
                                swal({
                                    title: "Success",
                                    text: "success",
                                    type: "success"
                                });

                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}