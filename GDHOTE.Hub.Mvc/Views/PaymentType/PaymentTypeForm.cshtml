@model GDHOTE.Hub.CoreObject.ViewModels.PaymentTypeFormViewModel
@{
    ViewBag.Title = "PaymentTypeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.Name == null ? "New Payment Type" : "Edit Payment Type";
    }

}
<h2>@pagename</h2>

@using (Html.BeginForm("Save", "PaymentType"))
{
    <div>
        @Html.ValidationSummary(true, "Please fix the below errors.")
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control gdhote-text-capitalize" })
            @Html.ValidationMessageFor(p => p.Name)
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div>@Html.AntiForgeryToken()</div>
    </div>
}

