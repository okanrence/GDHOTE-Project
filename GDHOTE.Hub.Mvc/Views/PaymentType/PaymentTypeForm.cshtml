@model GDHOTE.Hub.Core.ViewModels.PaymentTypeFormViewModel
@{
    ViewBag.Title = "PaymentTypeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.PaymentType.PaymentTypeId == 0 ? "New Payment Type" : "Edit Payment Type";
    }

}
<h2>@pagename</h2>

@using (Html.BeginForm("Save", "PaymentType"))
{
    <div>
        @Html.ValidationSummary(true, "Please fix the below errors.")
        <div class="form-group">
            @Html.LabelFor(p => p.PaymentType.Description)
            @Html.TextBoxFor(p => p.PaymentType.Description, new { @class = "form-control gdhote-text-capitalize" })
            @Html.ValidationMessageFor(p => p.PaymentType.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.PaymentType.Status)
            @Html.DropDownListFor(p => p.PaymentType.Status, new SelectList(Model.Status, "Code", "Description"), "Select Status", new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.PaymentType.Status)
        </div>
        <div>@Html.HiddenFor(p => p.PaymentType.PaymentTypeId)</div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div>@Html.AntiForgeryToken()</div>
    </div>
}

