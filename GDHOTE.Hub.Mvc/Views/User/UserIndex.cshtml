@model List<GDHOTE.Hub.Core.Models.UserView>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
<p>
    @Html.ActionLink("New user", "New", "User", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="users" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>User Status</th>
                    <th>CreatedDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(user.UserName, "Edit", "User", new { id = user.UserId }, null)</td>
                        <td>@user.EmailAddress </td>
                        <td>@user.UserRole </td>
                        <td>@user.UserStatus</td>
                        <td>@user.CreatedDate.ToString("dd-MMM-yyyy")</td>
                        <td><button data-user-id="@user.UserId" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#users").DataTable();

            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/hub/user/deleteuser?id=" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}
