@model List<GDHOTE.Hub.CoreObject.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
<p>
    @Html.ActionLink("New user", "New", "User", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="users" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th>User Status</th>
                        <th>CreatedDate</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(user.EmailAddress, "Edit", "User", new { id = user.UserId }, null)</td>
                            <td>@user.FirstName , @user.LastName </td>
                            <td>@user.UserRole </td>
                            <td>@user.UserStatus</td>
                            <td>@user.DateCreated.ToString("dd-MMM-yyyy")</td>
                            <td><button data-user-id="@user.UserId" class="btn btn-link js-delete">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#users").DataTable();

            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                var id = button.attr("data-user-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteUser", "User")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}
