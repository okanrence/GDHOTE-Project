@model List<GDHOTE.Hub.CoreObject.ViewModels.PaymentModeViewModel>

@{
    ViewBag.Title = "PaymentModeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mode of Payment</h2>

<p>
    @Html.ActionLink("New Payment Mode", "New", "PaymentMode", null, new { @class = "result-list-button" })
</p>


@if (Model == null)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">

        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="paymentmodes" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var paymentMode in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(paymentMode.Name, "Edit", "PaymentMode", new {id = paymentMode.Id}, null)</td>
                        <td>@paymentMode.Status</td>
                        <td>@paymentMode.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-paymentmode-id="@paymentMode.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#paymentmodes").DataTable();

            $("#paymentmodes").on("click", ".js-delete", function () {
                var button = $(this);

                var id = button.attr("data-paymentmode-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeletePaymentMode", "PaymentMode")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}
