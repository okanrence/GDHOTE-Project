@model List<GDHOTE.Hub.CoreObject.ViewModels.StateViewModel>

@{
    ViewBag.Title = "States";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>States</h2>
<p>
    @Html.ActionLink("New State", "New", "State", null, new { @class = "result-list-button" })
</p>

@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="states" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var state in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(state.Name, "Edit", "State", new { id = state.Id }, null)</td>
                        <td>@state.Status</td>
                        <td>@state.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-state-id="@state.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

    </div>

}
@section scripts
{
<script>
        $(document).ready(function () {
            
            $("#states").on("click", ".js-delete", function () {
                var button = $(this);
                var id = button.attr("data-state-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteState", "State")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });
            });
        });
</script>
}
