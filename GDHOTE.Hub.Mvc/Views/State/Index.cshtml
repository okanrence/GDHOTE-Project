@model List<GDHOTE.Hub.Core.Models.State>

@{
    ViewBag.Title = "States";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>States</h2>
<p>
    @Html.ActionLink("New State", "New", "State", null, new { @class = "result-list-button" })
</p>


@if (Model == null)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="states" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Country Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var state in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(state.StateName, "Edit", "State", new { id = state.Id }, null)</td>
                        <td>@state.StateCode</td>
                        <td>@state.CountryCode</td>
                        <td><button data-customer-id="@state.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
