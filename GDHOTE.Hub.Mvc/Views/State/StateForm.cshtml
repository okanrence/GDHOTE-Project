@model GDHOTE.Hub.Core.ViewModels.StateFormViewModel
@{
    ViewBag.Title = "NewState";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.State.Id == 0 ? "New State" : "Edit State";
    }

}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "State"))
{
    <div>
        @*@Html.ValidationSummary(true, "Please fix the below errors.")*@
        <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(s => s.State.StateCode)
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(s => s.State.StateCode, new { @class = "form-control gdhote-text-uppercase" })
                </div>
                @Html.ValidationMessageFor(s => s.State.StateCode)
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(s => s.State.StateName)
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(s => s.State.StateName, new { @class = "form-control gdhote-text-capitalize" })
                </div>
                @Html.ValidationMessageFor(s => s.State.StateName)
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(s => s.State.CountryCode)
                </div>
                <div class="col-md-6">
                    @Html.DropDownListFor(s => s.State.CountryCode, new SelectList(Model.Countries, "CountryCode", "CountryName"), "Select Country", new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(s => s.State.CountryCode)
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(s => s.State.Status)
                </div>
                <div class="col-md-6">
                    @Html.DropDownListFor(s => s.State.Status, new SelectList(Model.Status, "Code", "Description"), "Select Status", new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(s => s.State.Status)
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div>@Html.HiddenFor(s => s.State.Id)</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <div>@Html.AntiForgeryToken()</div>
        </div>
    </div>

}
