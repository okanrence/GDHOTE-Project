@model GDHOTE.Hub.Core.ViewModels.PaymentFormViewModel
@{
    ViewBag.Title = "PaymentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model.Payment.PaymentId == 0 ? "New Payment" : "Edit Payment";
    }

}
<h2>@pagename</h2>


@using (Html.BeginForm("Save", "Payment"))
{
    <div>
        @Html.ValidationSummary(true, "Please fix the below errors.")
        <div class="form-group">
            @Html.LabelFor(p => p.Payment.MemberKey)
            @Html.TextBoxFor(p => p.Payment.MemberKey, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Payment.MemberKey)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Payment.Narration)
            @Html.TextBoxFor(p => p.Payment.Narration, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Payment.Narration)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Payment.Amount)
            @Html.TextBoxFor(p => p.Payment.Amount, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Payment.Amount)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Payment.PaymentTypeId)
            @Html.DropDownListFor(p => p.Payment.PaymentTypeId, new SelectList(Model.PaymentTypes, "PaymentTypeId", "Description"), "Select Payment Type", new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Payment.PaymentTypeId)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Payment.PaymentModeId)
            @Html.DropDownListFor(p => p.Payment.PaymentModeId, new SelectList(Model.ModeOfPayments, "PaymentModeId", "Description"), "Select Mode Of Payment", new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Payment.PaymentModeId)
        </div>
        <div>@Html.HiddenFor(p => p.Payment.PaymentId)</div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div>@Html.AntiForgeryToken()</div>
    </div>

}


