@model List<GDHOTE.Hub.CoreObject.ViewModels.PaymentViewModel>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="paymentTypes" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Narration</th>
                    <th>Amount</th>
                    <th>Mode</th>
                    <th>Payment Type</th>
                    <th>Currency</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.Surname, @payment.FirstName</td>
                        <td>@payment.Narration</td>
                        <td>@($"{payment.Amount:#,##0.00}") </td>
                        <td>@payment.PaymentMode</td>
                        <td>@payment.PaymentType</td>
                        <td>@payment.Currency</td>
                        <td>@payment.DateCreated.ToString("dd-MMM-yyyy | HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#paymentTypes").DataTable();

        });
    </script>
}

