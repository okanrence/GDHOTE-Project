@model List<GDHOTE.Hub.Core.Models.MembershipStatus>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Membership Status</h2>
<p>
    @Html.ActionLink("New Status", "New", "MembershipStatus", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="membershipStatuses" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var membershipStatus in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(membershipStatus.StatusDescription, "Edit", "MembershipStatus", new { id = membershipStatus.Id }, null)</td>
                        <td>@membershipStatus.StatusCode</td>
                        <td><button data-membershipstatus-id="@membershipStatus.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#membershipStatuses").DataTable();

            $("#membershipStatuses").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/v1/hub/membershipStatus/delete-membership-status?id=" + button.attr("data-membershipstatus-id"),
                            method: "DELETE",
                            success: function () {
                                swal({
                                    title: "Success",
                                    text: "success",
                                    type: "success" 
                                });

                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}

