@model List<GDHOTE.Hub.Core.Models.Country>
@{
    ViewBag.Title = "Countries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Countries</h2>
<p>
    @Html.ActionLink("New Country", "New", "Country", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{
    <div>
        <table id="countries" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(country.CountryCode, "Edit", "Country", new { id = country.Id }, null)</td>
                        <td>@country.CountryName</td>
                        <td><button data-customer-id="@country.Id" class="btn btn-link js-delete">Delete</button></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
