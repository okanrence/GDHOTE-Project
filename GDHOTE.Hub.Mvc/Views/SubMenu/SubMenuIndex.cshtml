@model List<GDHOTE.Hub.CoreObject.ViewModels.SubMenuViewModel>

@{
    ViewBag.Title = "SubMenuIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sub Menu</h2>
<p>
    @Html.ActionLink("New Sub Menu", "New", "SubMenu", null, new { @class = "btn btn-primary" })
</p>


@if (Model == null || Model.Count == 0)
{
    <p>No record(s) found</p>
}
else
{

    <div id="responsive">
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>

        <div>
            <table id="submenus" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Main Menu</th>
                    <th>Url</th>
                    <th>Status</th>
                    <th>Display Sequence</th>
                    <th>CreatedDate</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var subMenu in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(subMenu.Name, "Edit", "SubMenu", new { id = subMenu.Id }, null)</td>
                        <td>@subMenu.Name </td>
                        <td>@subMenu.Url </td>
                        <td>@subMenu.Status</td>
                        <td>@subMenu.DisplaySequence</td>
                        <td>@subMenu.DateCreated.ToString("dd-MMM-yyyy")</td>
                        <td><button data-sub-menu-id="@subMenu.Id" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#submenus").DataTable();

            $("#submenus").on("click", ".js-delete", function () {
                var button = $(this);

                var id = button.attr("data-sub-menu-id");

                var form = $('#responsive');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                //Submit request
                var request = { __RequestVerificationToken: token };

                bootbox.confirm("Are you sure you want to proceed?", function (result) {
                    if (result) {
                        $.ajax({
                            url: '@Url.Action("DeleteSubMenu", "SubMenu")/' + id,
                            method: "POST",
                            data: request,
                            success: function (data) {
                                if (data !== null) {
                                    if (data.ErrorCode === "00") {
                                        swal({
                                            title: "Success",
                                            text: "success",
                                            type: "success"
                                        });

                                        window.location.reload(true);
                                    }
                                    else {
                                        alert(data.ErrorMessage);
                                    }
                                };

                            }
                        });
                    }
                });

            });
        });
    </script>
}
