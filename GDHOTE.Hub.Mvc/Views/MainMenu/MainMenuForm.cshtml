@model GDHOTE.Hub.CoreObject.ViewModels.MainMenuFormViewModel

@{
    ViewBag.Title = "MainMenuForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var pagename = "New Main Menu";
}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "MainMenu"))
{
    <div>
        <span class="text-danger">@ViewBag.ErrorBag</span>
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control gdhote-text-capitalize", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DisplaySequence)
            @Html.TextBoxFor(m => m.DisplaySequence, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.DisplaySequence)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>
    </div>

}


