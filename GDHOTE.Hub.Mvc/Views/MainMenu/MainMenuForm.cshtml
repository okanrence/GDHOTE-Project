@model GDHOTE.Hub.CoreObject.ViewModels.MainMenuViewModel

@{
    ViewBag.Title = "MainMenuForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var pagename = "";
    if (Model != null)
    {
        pagename = Model == null ? "New Main Menu" : "Edit Main Menu";
    }

}
<h2>@pagename</h2>
@using (Html.BeginForm("Save", "MainMenu"))
{
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.MainMenu.Name)
            @Html.TextBoxFor(m => m.MainMenu.Name, new { @class = "form-control gdhote-text-capitalize" })
            @Html.ValidationMessageFor(m => m.MainMenu.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MainMenu.DisplaySequence)
            @Html.TextBoxFor(m => m.MainMenu.DisplaySequence, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MainMenu.DisplaySequence)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MainMenu.Status)
            @Html.DropDownListFor(m => m.MainMenu.Status, new SelectList(Model.Status, "Code", "Description"), "Select Status", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MainMenu.Status)
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => m.MainMenu.MenuId)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
        </div>
    </div>

}


